<Window 
        x:Class="SnagItAddin.ScreenOverlayCounter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="130"
        Height="130"
        WindowStyle="None"                
        Topmost="True"        
        Background="Black"
        ResizeMode="NoResize" 
        AllowsTransparency="True"
        Opacity="0.75"
        >
    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Name="TextSize" Foreground="#bbb" Background="Black" 
                 FontWeight="Bold" FontSize="200"
                 BorderThickness="0" >
            1
        </TextBox>
    </Viewbox>
</Window>
    
