<Window 
        x:Class="SnagItAddin.ScreenClickOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="400"
        Height="300"
        WindowStyle="None"                
        Topmost="True"            
        ResizeMode="NoResize" 
        AllowsTransparency="True"        
        BorderBrush="Orange"
        BorderThickness="4"
        Cursor="Cross"       
        MouseLeftButtonDown="TextSize_MouseLeftButtonDown"
        >
    <Window.Background>
        <SolidColorBrush Opacity="0.6" Color="#555"/>
    </Window.Background>
    <Viewbox>
        <TextBlock Name="TextSize" Foreground="#bbb" Margin="3" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" >
            200x300
       </TextBlock>
    </Viewbox>
</Window>
    
